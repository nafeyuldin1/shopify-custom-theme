{% if section.settings.enable_carousel %}
<script>
document.addEventListener("DOMContentLoaded", function() {
    function initCollectionSlick{{ section.id | replace: '-', '' }}() {
        var $slider = $('#collection-list-{{ section.id }}');
        
        if ($slider.length === 0) return;

        var rows = parseInt($slider.data('rows')) || 1;
        var desktopShow = parseInt($slider.data('slidestoshow')) || 3;
        var mobileShow = parseInt($slider.data('slidestoshow-mobile')) || 2; 
        var arrows = $slider.data('arrows');
        var dots = $slider.data('dots');
        var infinite = $slider.data('infinite');
        var draggable = $slider.data('draggable');

        if ($slider.hasClass('slick-initialized')) {
            $slider.slick('unslick');
        }

        $slider.slick({
            rows: rows,
            slidesToShow: desktopShow,
            slidesToScroll: 1,
            arrows: arrows,
            dots: dots,
            infinite: infinite,
            draggable: draggable,
            responsive: [
                {
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: desktopShow >= 3 ? 3 : desktopShow,
                        slidesToScroll: 1
                    }
                },
                {
                    breakpoint: 768,
                    settings: {
                        slidesToShow: mobileShow, /* Ensures Slider Logic knows its 2 */
                        slidesToScroll: 1,
                        rows: 1
                    }
                }
            ]
        });
    }

    setTimeout(function(){
        if (typeof $ !== 'undefined') {
            initCollectionSlick{{ section.id | replace: '-', '' }}();
        }
    }, 200);

    if (Shopify.designMode) {
        document.addEventListener('shopify:section:load', function(event) {
            if (event.detail.sectionId === '{{ section.id }}') {
                initCollectionSlick{{ section.id | replace: '-', '' }}();
            }
        });
    }
});
</script>
{% endif %}

