<style>
  /* Base Image Style */
  .customstyle{{ section.id }} .collection-card__image{
    border-radius:{{ section.settings.radius }}%;
    isolation: isolate;
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
  }
  
  /* --- DYNAMIC TITLE POSITION LOGIC --- */
  
  /* Common Text Styling */
  .customstyle{{ section.id }} .collection-card-1-infor {
    width: 100%;
    text-align: {{ section.settings.align-heading }};
    padding: 10px;
    transition: all 0.3s ease;
    z-index: 2;
  }

  .customstyle{{ section.id }} .collection-card-1-infor h4 {
    font-weight: bold;
    font-size: 24px;
    margin: 0;
    line-height: 1.2;
  }

  /* CASE 1: OVERLAY (Original Style - Center) */
  {% if section.settings.title_position == 'overlay' %}
    .customstyle{{ section.id }} .collection-card-1-infor {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
    .customstyle{{ section.id }} .collection-card-1-infor h4 {
      color: #fff;
      text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }
  
  /* CASE 2: ABOVE IMAGE */
  {% elsif section.settings.title_position == 'above' %}
    /* Force Flex column to reorder items */
    .customstyle{{ section.id }} .collectionlist-item > a, 
    .customstyle{{ section.id }} .collectionlist-item > div {
       display: flex;
       flex-direction: column;
    }
    .customstyle{{ section.id }} .collection-card-1-infor {
      order: -1; /* Move text to top */
      position: relative;
      margin-bottom: 5px;
    }
    .customstyle{{ section.id }} .collection-card-1-infor h4 {
      color: {{ section.settings.text_color_outside }}; /* Dynamic Color */
      text-shadow: none;
    }

  /* CASE 3: BELOW IMAGE */
  {% elsif section.settings.title_position == 'below' %}
    .customstyle{{ section.id }} .collection-card-1-infor {
      position: relative;
      margin-top: 5px;
    }
    .customstyle{{ section.id }} .collection-card-1-infor h4 {
      color: {{ section.settings.text_color_outside }}; /* Dynamic Color */
      text-shadow: none;
    }
  {% endif %}
  /* ------------------------------------- */

  /* --- DESKTOP LAYOUT --- */
  .customstyle{{ section.id }} .collectionlist-slider {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -10px;
  }
  .customstyle{{ section.id }} .collectionlist-item {
    padding: 0 10px;
    margin-bottom: 20px;
    box-sizing: border-box;
    width: calc(100% / {{ section.settings.show }}); /* Desktop Width */
  }

  /* --- MOBILE LAYOUT (The Fix) --- */
  @media (max-width: 767px) {
    /* Force 2 items in one row strictly using CSS */
    .customstyle{{ section.id }} .collectionlist-item {
      /* Dynamic Width Calculation based on setting */
      width: calc(100% / {{ section.settings.show_mobile }}) !important;
      padding: 0 5px !important; /* Smaller gap for mobile */
      margin-bottom: 10px !important;
      flex: 0 0 auto !important;
    }
    
    /* Container adjustment for smaller gaps */
    .customstyle{{ section.id }} .collectionlist-slider {
        margin: 0 -5px !important;
    }

    /* Adjust font size on mobile so it fits */
    .customstyle{{ section.id }} .collection-card-1-infor h4 {
        font-size: 16px !important; 
    }
  }

  /* Slick Slider Helper */
  .collectionlist-slider.slick-initialized .slick-slide {
      display: block;
      height: auto;
  }
  
  /* Style Item Top Specifics */
  {% if section.settings.style_item == "top" %}
    .customstyle{{ section.id }} .button-collection-grid{
        display: none; /* Hide button in this style for cleaner look */
    }
  {% else %}
    .customstyle{{ section.id }} .collectionlist-item:hover h4{
        color: var(--g-main);
    }
  {% endif %}
</style>

<div class="customstyle{{ section.id }}" data-aos="{{ section.settings.animation }}">
  {%- render 'style-section' -%}
  <div class="{{ section.settings.setwidth }}">
    <div class="section-block">
      {%- render 'section-heading' -%}
      <div class="collectionlist-wrapper pt-0 pt-lg-0">
        
        <div class="collectionlist-slider" id="collection-list-{{ section.id }}"
            data-rows="{{ section.settings.rows }}"
            data-slidesToShow="{{ section.settings.show }}"
            data-slidestoscroll="{{ section.settings.show }}"
            data-arrows="{{ section.settings.arrows }}"
            data-dots="{{ section.settings.dots }}" 
            data-draggable="{{ section.settings.draggable }}" 
            data-infinite="{{ section.settings.infinite }}" 
            data-section-id="{{ section.id }}" 
            data-slidestoshow-mobile="{{ section.settings.show_mobile }}"
          >
          {%- for block in section.blocks -%}
          <div class="collectionlist-item carousel__slide-wrapper--{{ block.id }}" {{ block.shopify_attributes }}>
            {%- assign featured_collection = collections[block.settings.collection] -%}
            {%- assign featured_image = block.settings.image -%}
            {%- assign icon_image = block.settings.icon -%}
            {%- render 'collection-grid-item', featured_image: featured_image, icon_image: icon_image, featured_collection: featured_collection, column: 'none', size_image: section.settings.size_image, headinglist: section.settings.size_text, show_count: section.settings.show_count, button_text: section.settings.button_text -%}
          </div>
          {%- endfor -%}
        </div>
      </div>
      {%- if section.blocks.size == 0 -%}
      {%- render 'no-blocks' -%}
      {%- endif -%}
    </div>
  </div>
</div>

