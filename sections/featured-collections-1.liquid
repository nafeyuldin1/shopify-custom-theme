<style>
  .customstyle{{ section.id }} .collection-card__image{
    border-radius:{{ section.settings.radius }}%;
    isolation: isolate;
    width: 100%; /* Ensure image fits container */
  }
  .customstyle{{ section.id }} .slick-dots{
    margin-top: 30px;
  }
  {% unless section.settings.show_count %}
  .customstyle{{ section.id }} .collection-count{
    display: none;
  }
  {% endunless  %}
  
  /* Fix for text alignment */
  .customstyle{{ section.id }} .collection-card-1-infor{
    width: 100%;
    text-align: center;
  }
  
  /* Spacing fix because we removed 'row' class */
  .customstyle{{ section.id }} .collectionlist-item {
      padding: 0 10px; /* Gap between items */
      margin-bottom: 20px;
  }

  /* Style Item Top Logic */
  {% if section.settings.style_item == "top" %}
    .customstyle{{ section.id }}{
        --g-cta-text:#fff;
    }
    .customstyle{{ section.id }} .collection-card-1-infor{
        padding: 10%;
    }
    .customstyle{{ section.id }} .button-collection-grid{
        transform: translateY(80px);
        height: 0;
        opacity: 1;
        transition: all .3s ease;
    }
    .customstyle{{ section.id }} .collection-card-1:hover .button-collection-grid{
        opacity: 1;
        transition: all .5s ease;
        transform: translateY(0);
        height: 50px;
        margin-top: 20px;
    }
    @media (min-width:1200px) {
        .customstyle{{ section.id }} .collection-card-1-infor h4{
        font-size: 22px;
        }
    }
  {% else %}
    .customstyle{{ section.id }} .collectionlist-item:hover h4{
        color: var(--g-main);
    }
  {% endif %}

  /* Container Width Fix */
  .customstyle{{ section.id }} .collectionlist-wrapper {
      overflow: hidden; /* Prevents horizontal scrollbar */
  }
  
  /* Slider Initialization Fix */
  .collectionlist-slider:not(.slick-initialized) {
    display: flex;
    overflow-x: hidden;
  }
  .collectionlist-slider:not(.slick-initialized) .collectionlist-item {
     flex: 0 0 auto; 
     width: calc(100% / {{ section.settings.show }});
  }
  /* Mobile fallback pre-load */
  @media (max-width: 767px) {
      .collectionlist-slider:not(.slick-initialized) .collectionlist-item {
          width: calc(100% / {{ section.settings.show_mobile }});
      }
  }

  {%- for block in section.blocks -%}
    {% if block.settings.bg_title != blank  %}
    .carousel__slide-wrapper--{{ block.id }} .collection-card-1-infor{
      transform: translateY(-50%);
    }
      .carousel__slide-wrapper--{{ block.id }} .collection-card-1-infor h4{
        display: block;
        position: relative;
        width: 250px;
        max-width: 100%;
        height: 60px;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        padding: 0 !important;
        background-size: cover;
        background:url({{ block.settings.bg_title  | image_url: width: 1920 }}) center center no-repeat ;
      }
    {% endif %}
  {% endfor %}
</style>

<div class="customstyle{{ section.id }}"  data-aos="{{ section.settings.animation }}" >
{%- render 'style-section' -%}
  <div class="{{ section.settings.setwidth }}">
    <div class="section-block">
      {%- render 'section-heading' -%}
      <div class="collectionlist-wrapper pt-0 pt-lg-0">
        
        {% comment %} 
            UPDATED: Removed 'row' class to prevent bootstrap conflict 
        {% endcomment %}
        <div class="collectionlist-slider" id="collection-list-{{ section.id }}"
            data-rows="{{ section.settings.rows }}"
            data-slidesToShow="{{ section.settings.show }}"
            data-slidestoscroll="{{ section.settings.show }}"
            data-arrows="{{ section.settings.arrows }}"
            data-dots="{{ section.settings.dots }}" 
            data-draggable="{{ section.settings.draggable }}" 
            data-infinite="{{ section.settings.infinite }}" 
            data-section-id="{{ section.id }}" 
            data-slidestoshow-mobile="{{ section.settings.show_mobile }}"
          >
          {%- for block in section.blocks -%}
          
          {% comment %} 
            UPDATED: Removed 'col' class. Now Slick Slider handles the width 
          {% endcomment %}
          <div class="collectionlist-item carousel__slide-wrapper--{{ block.id }}" {{ block.shopify_attributes }} >
            {%- assign featured_collection = collections[block.settings.collection] -%}
            {%- assign featured_image = block.settings.image -%}
            {%- assign icon_image = block.settings.icon -%}
            {%- render 'collection-grid-item' , featured_image: featured_image,icon_image: icon_image, featured_collection: featured_collection, column: 'none', size_image: section.settings.size_image, headinglist: section.settings.size_text,show_count: section.settings.show_count, button_text: section.settings.button_text -%}
          </div>
          {%- endfor -%}
        </div>
      </div>
      {%- if section.blocks.size == 0 -%}
      {%- render 'no-blocks' -%}
      {%- endif -%}
    </div>
  </div>
</div>

{% comment %} 
  JAVASCRIPT: Forces slider to respect mobile setting and reload correctly
{% endcomment %}
{% if section.settings.enable_carousel %}
<script>
document.addEventListener("DOMContentLoaded", function() {
    function initCollectionSlick{{ section.id | replace: '-', '' }}() {
        var $slider = $('#collection-list-{{ section.id }}');
        
        if ($slider.length === 0) return;

        // Settings variables
        var rows = $slider.data('rows');
        var desktopShow = $slider.data('slidestoshow');
        var mobileShow = $slider.data('slidestoshow-mobile'); // Using the new mobile setting
        var arrows = $slider.data('arrows');
        var dots = $slider.data('dots');
        var infinite = $slider.data('infinite');
        var draggable = $slider.data('draggable');

        // Check if slick is already initialized to avoid conflict
        if ($slider.hasClass('slick-initialized')) {
            $slider.slick('unslick');
        }

        // Initialize Slick
        $slider.slick({
            rows: rows,
            slidesToShow: desktopShow,
            slidesToScroll: desktopShow,
            arrows: arrows,
            dots: dots,
            infinite: infinite,
            draggable: draggable,
            responsive: [
                {
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: desktopShow >= 3 ? 3 : desktopShow,
                        slidesToScroll: 1
                    }
                },
                {
                    breakpoint: 767, /* Mobile Breakpoint */
                    settings: {
                        slidesToShow: mobileShow, /* This will now enforce 2 items */
                        slidesToScroll: 1,
                        rows: 1 /* Force 1 row logic on mobile to prevent stacking */
                    }
                }
            ]
        });
    }

    // Initialize on load
    setTimeout(function(){
        if (typeof $ !== 'undefined') {
            initCollectionSlick{{ section.id | replace: '-', '' }}();
        }
    }, 100);

    // Re-initialize on Theme Editor update
    if (Shopify.designMode) {
        document.addEventListener('shopify:section:load', function(event) {
            if (event.detail.sectionId === '{{ section.id }}') {
                initCollectionSlick{{ section.id | replace: '-', '' }}();
            }
        });
    }
});
</script>
{% endif %}

